    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
